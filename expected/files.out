create or replace function gen_file() returns void as $$
declare 
  f utl_file.file_type;
  r record;
begin
  f := utl_file.fopen('/tmp','regress_orafce','w');
  for r in select m from generate_series(1,20) m(m) loop
    perform utl_file.put_line(f, r.m::numeric);
  end loop;
  f := utl_file.fclose(f);
end;
$$ language plpgsql;
select gen_file();
